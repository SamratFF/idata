      <div class="mx-auto w-9/12">
        <form action="/" method="post">
          <div class="inputArea my-2">
            <p class="text-base text-gray-600 font-semibold">Name</p>
            <input type="text" name="name" placeholder="Eg: Jake" class="border-2 border-gray-200 border-opacity-75 w-full my-1 hover:border-gray-200 p-2 rounded-md drop-shadow-2xl text-base">
          </div>

          <div class="inputArea my-2 mt-3">
            <p class="text-base text-gray-600 font-semibold">Email</p>
            <input type="email" name="email" placeholder="Eg: jake@email.com" class="border-2 border-gray-200 border-opacity-75 w-full my-1 hover:border-gray-200 p-2 rounded-md drop-shadow-2xl text-base">
          </div>

          <div class="inputArea my-2 mt-3">
            <p class="text-base text-gray-600 font-semibold">Password</p>
            <input type="password" name="password" placeholder="Eg: jake7238_jake" class="border-2 border-gray-200 border-opacity-75 w-full my-1 hover:border-gray-200 p-2 rounded-md drop-shadow-2xl text-base">
          </div>

          <div class="my-3 ">
            <button class="p-2 px-5 submitBTN text-base font-semibold text-white rounded-lg">Submit</button>
          </div>
